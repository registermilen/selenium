					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>buildnumber-maven-plugin</artifactId>
						<version>1.1</version>
						<configuration>
							<shortRevisionLength>3</shortRevisionLength>
							<doCheck>false</doCheck>
							<doUpdate>false</doUpdate>
						</configuration>
						<executions>
							<execution>
								<phase>validate</phase>
								<goals>
