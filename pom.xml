<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.bbraun.hybris.test</groupId>
	<artifactId>hybris-test-poc</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>Hybris Test Project</name>
	<description>UI and API test for Hybris platform (PoC)</description>

	<scm>
		<url>https://bitbucket.org/bbmag/hybris-test-poc.git</url>
		<connection>scm:git:https://bitbucket.org/bbmag/hybris-test-poc.git</connection>
		<developerConnection>scm:git:https://bitbucket.org/bbmag/hybris-test-poc.git</developerConnection>
	</scm>

	<dependencies>
		<dependency>
			<groupId>com.bbraun.bbmtest</groupId>
			<artifactId>bbmtest-framework</artifactId>
			<version>0.1.0-SNAPSHOT</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.6.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>bbraun-ci</id>

			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>

			<distributionManagement>
				<repository>
					<id>releases</id>
					<name>Internal Releases</name>
					<url>${distribution.url.releases}</url>
				</repository>
				<snapshotRepository>
					<id>snapshots</id>
					<name>Internal Snapshots</name>
					<url>${distribution.url.snapshots}</url>
				</snapshotRepository>
			</distributionManagement>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
     					<artifactId>maven-surefire-plugin</artifactId>
     					<version>2.13</version>
     					<configuration>
      						<!-- same configuration as in the regular test execution goal -->
     						<!-- plus argLine parameter configured by JaCoCo prepare-agent -->
      						<argLine>${jacoco.agent.ut.arg}</argLine>
     					</configuration>
